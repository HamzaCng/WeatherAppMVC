@model HamzaCingiWeatherApp.Models.Weather

@{
    ViewBag.Title = "SelectedWeather";
}

<h2>Selected Weather</h2><br><br>
<!DOCTYPE html>
<html>
<head>
    <title>Select </title>    
</head>
<body>
    <div>
       @using (Html.BeginForm())
       {
           <div class="form-horizontal">

               <div class="form-group">
                   <label class="col-md-1 control-label">City: </label>
                   <div class="col-md-10" >
                       @Html.DropDownList("SelectedWeather", (SelectList)ViewBag.data, "Lütfen Şehir Seçiniz.",
       new { @class = "form-control dropdown" })
                   </div>
               </div>
               <hr />               
               <div class="form-group">
                   <div class="col-md-10">
                       <button id="selectedbtn" class="btn btn-success" type="submit">
                           Select
                       </button>
                   </div>
               </div>   
               <div class="form-group">
                   <div class="col-md-10 alert-info">
                       Hava Durumu: @ViewBag.SelectedWeather                       
                   </div>
               </div>
               <hr />                  
           </div>
       }
    </div>

</body>
</html>
